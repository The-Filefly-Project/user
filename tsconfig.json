{
    "exclude": [
        "./test"
    ],
    "include": [
        "./src"
    ],
    "compilerOptions": {

        /* Base Options: */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        
        /* Strictness */
        "strict": true,
        "noUncheckedIndexedAccess": true,

        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        
        "lib": ["es2022"]

    }
}